<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="demo.mapper.MessageMapper">
    <select id="selectAllMessageData" resultType="demo.entity.Message">
        select
            message_id as messageId,
            message_value as messageValue
         from message
    </select>
    <select id="selectMessageDataForId" resultType="demo.entity.Message">
        select
            message_id as messageId,
            message_value as messageValue
         from message
         where message_id = #{messageId}
    </select>
</mapper>